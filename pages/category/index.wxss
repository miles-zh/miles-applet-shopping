/* pages/category/index.wxss */
page{
  height: 100%;
}
.category-container{
  height: 100%;
}
.category-content{
  height: calc(100% - 90rpx);
  width: 100%;
  display: flex;
}
.category-content .left-menu{
  flex: 2;
  border-right: 1px solid #999;
}
.category-content .left-menu .menu-item{
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 25rpx;
  margin-top:10rpx;
}
.category-content .left-menu .menu-item.active{
  color: var(--themeColor);
  border-left:5px solid currentColor;
}
.category-content .right-content{
  flex: 6;
}
.category-content .right-content .goods-group{
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
}
.category-content .right-content .goods-group .goods-title{
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
}
.category-content .right-content .goods-group .goods-title .delimiter{
  color: #ccc;
  padding: 0 10rpx;
}
.category-content .right-content .goods-group .goods-list{
    display: flex;
    flex-wrap: wrap;
    padding: 0rpx 10rpx;
    align-items: center;
    
    
}
.category-content .right-content .goods-group .goods-list navigator{
  width: 33%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
padding: 20rpx;
}
.category-content .right-content .goods-group .goods-list navigator image{
  width: 90%;
}
.category-content .right-content .goods-group .goods-list navigator .goods-name{
  font-size: 14rpx;
  color: #555;
}